{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "gem": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "preciousness": {
          "type": "string",
          "enum" : ["precious", "semiprecious"]
        },
        "origin": {
          "type": "string"
        },
        "visualParameters": {
          "type": "object",
          "properties": {
            "color": {
              "type": "string",
              "enum": ["colorless", "white", "black", "pink", "red", "blue", "green", "yellow"]
            },
            "transparency": {
              "type": "integer",
              "minimum": 0,
              "maximum": 100
            },
            "diamondCut": {
              "type": "integer",
              "minimum": 4,
              "maximum": 15
            }
          }
        },
        "value": {
          "type": "integer"
        }
      },
      "required": [
        "name",
        "preciousness",
        "origin",
        "visualParameters",
        "value"
      ]
    }
  },
  "required": [
    "gem"
  ]
}